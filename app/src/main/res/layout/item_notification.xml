<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/noticeImg"
        android:layout_width="137dp"
        android:layout_height="78dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/discount_4" />

    <TextView
        android:id="@+id/titleNotice"
        android:layout_width="253dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:maxEms="30"
        android:singleLine="false"
        android:text="Ưu đãi tháng 4 - Giảm 50% Phí Khám tại Medifin"
        android:textColor="@color/light_blue_600"
        app:layout_constraintStart_toEndOf="@+id/noticeImg"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/dateNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="20/04/2023 22:46"
        android:textColor="@color/gray_600"
        app:layout_constraintStart_toEndOf="@+id/noticeImg"
        app:layout_constraintTop_toBottomOf="@+id/titleNotice" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@+id/dateNotice" />
</androidx.constraintlayout.widget.ConstraintLayout>